@import "../nib/vendor.styl"
/*
 * bottomLine('down',10px,0.3s,#f19f0f)
 *    direction 动画偏移方向，可以是up和down
 *    offset Y轴偏移
 *    speed 动画速度
 *    borderColor 边框颜色
 *    height 边框高度
 */
bottomLine(direction = 'down',offset = 10px,speed = 0.3s,borderColor = #f19f0f,height = 2px)
  if direction isnt 'up'
    offset = -(offset)
  .effect-bottom-line
    a
      &::after
        position: absolute
        bottom:  -8px
        left: 0
        width: 100%
        height: height
        background: bgColor
        content: ''
        opacity: 0
        background: borderColor
        transition transform speed,opacity speed
        transform translateY(offset)
      &:hover::after,&:focus::after
        opacity: 1
        transform translateY(0)
